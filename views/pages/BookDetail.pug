extends ../components/layout

block content
    //- console.log(res, req, book)
    form(method='POST' action='/' + book.id) 
        p(class='added-on') Added to library on #{book.addedOn()}
            br
            if book.updatedAt
                | Updated on #{book.updatedOn()}
        p
            label(for='title') Title
            input#title(name='title' type='text' value=`${book.title}`)
        p
            label(for='author') Author
            input#author(name='author' type='text' value=`${book.author}`)
        p
            label(for='genre') Genre
            input#genre(name='genre' type='text' value=`${book.genre}`)
        p
            label(for='year') Year
            input#year(name='year' type='text' value=`${book.year}`)
        p
            input(name='update' id='update' type='submit' value='Update Book')
            
    form(method='POST' action='')
        p
            input(name='delete' id='delete' type='submit' value='Delete Book')
        p
            a.link(href='/books' title='Back to all books') Back
